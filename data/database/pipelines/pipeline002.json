{
    "workflow_metadata": {
        "name": "SIMCE Lenguaje",
        "description": "Workflow SIMCE",
        "input": "EXCEL",
        "output": "PDF"
    },
    "context": {
        "base_dir": "tests"
    },
    "pipeline": [
        {
            "step": "InitRun",
            "params": {
                "inputs_dir": "tests/input_test/inputs/Lenguaje/inputs"
            }
        },
        {
            "step": "LoadConfig",
            "params": {
                "config_path": "./tests/config_dir/simce_estudiantes_lenguaje.json"
            }
        },
        {
            "step": "DiscoverInputs",
            "params": {
                "rules": {
                    "estudiantes": {
                        "extension": ".xlsx",
                        "contains": "Resultados"
                    },
                    "preguntas": {
                        "extension": ".xlsx",
                        "contains": "ReportePregunta"
                    },
                    "habilidades": {
                        "extension": ".xlsx",
                        "contains": "habilidades"
                    }
                }
            }
        },
        {
            "step": "RunExcelETL",
            "params": {
                "input_key": "estudiantes"
            }
        },
        {
            "step": "EnrichWithContext",
            "params": {}
        },
        {
            "step": "ExportConsolidatedExcel",
            "params": {}
        }
    ]
}