{
    "workflow_metadata": {
        "name": "Pipeline Simce Lenguaje",
        "description": "ETL para procesamiento de informes acad√©micos de Lenguaje"
    },
    "context": {
        "base_dir": "./backend/tests",
        "environment": "test"
    },
    "pipeline": [
        {
            "step": "InitRun",
            "params": {
                "inputs_dir": "input_test/inputs/Lenguaje/inputs"
            }
        },
        {
            "step": "LoadConfig",
            "params": {
                "config_path": "../config/simce_estudiantes_lenguaje.json"
            }
        },
        {
            "step": "DiscoverInputs",
            "params": {
                "rules": {
                    "estudiantes": {
                        "extension": ".xlsx",
                        "contains": "Resultados"
                    },
                    "preguntas": {
                        "extension": ".xlsx",
                        "contains": "ReportePregunta"
                    },
                    "habilidades": {
                        "extension": ".xlsx",
                        "contains": "habilidades"
                    }
                }
            }
        },
        {
            "step": "RunExcelETL",
            "params": {
                "input_key": "estudiantes"
            }
        },
        {
            "step": "EnrichWithContext",
            "params": {}
        },
        {
            "step": "ExportConsolidatedExcel",
            "params": {}
        }
    ]
}